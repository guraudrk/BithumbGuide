<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.view.main.PriceChangeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        >

        <TextView
            android:gravity="center"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/infoMationOfPriceChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="스캘핑 가이드를 이용하고 싶으시다면 앱을 완전히 종료하지 마십시오." />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="15분전대비 상승률(즐겨찾기 추가한지 15분이 지나야 합니다.)"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                />

            <androidx.recyclerview.widget.RecyclerView
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:id="@+id/price15m"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="30분전대비 상승률(즐겨찾기 추가한지 30분이 지나야 합니다.)"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                />

            <androidx.recyclerview.widget.RecyclerView
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:id="@+id/price30m"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="45분전대비 상승률(즐겨찾기 추가한지 45분이 지나야 합니다.)"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/price45m"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="1시간전대비 상승률(즐겨찾기 추가한지 1시간이 지나야 합니다.)"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/price1hour"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>


    </ScrollView>

</LinearLayout>